<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors", obj: @user%>
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :username, class:"col-2 col-form-label text-light"%>         <!-- #This is visible as <label for="article_title">Title</label> -->
                    <div class="col-10">
                        <%= f.text_field :username, class:"form-control", placeholder:"choose your username"%>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :email, class:"col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.text_field :email, class:"form-control", placeholder:"Enter your username"%>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :password, class:"col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.password_field :password, class:"form-control", placeholder:"choose your password"%>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit(@user.new_record? ? "sign up!" : "Update details!",class:"btn btn-outline-light btn-lg")%>
                </div>
            <% end %>

            <div class="row justify-content-center">
                <div class="md-3">
                    <%= link_to '[ Back to list ]', articles_path, rows:2, class:"text-info"%>
                </div>
            </div>
        </div>
    </div>
</div>