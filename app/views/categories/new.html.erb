<div class="page-content container">
    <h1 class="text-center text-success">Create new category</h1>

    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors", obj: @category%>
            <%= form_with(model: @category, class: "shadow p-3 mb-3 mt-4 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :name, "Category name", class:"col-2 col-form-label text-light"%>         <!-- #This is visible as <label for="article_title">Title</label> -->
                    <div class="col-10">
                        <%= f.text_field :name, class:"form-control", placeholder:"Enter category name"%>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit "Create category", class:"btn btn-outline-light btn-lg"%>
                </div>
            <% end %>

            <div class="row justify-content-center">
                <div class="md-3">
                    <%= link_to '[ Back to list ]', articles_path, rows:2, class:"text-info"%>
                </div>
            </div>
        </div>
    </div>
</div>
